
ButtonSpinner {
    Foreground: var(fore);
    Background: var(control-back);
    BorderBrush:var(control-border);
    BorderThickness: 1;
    CornerRadius: 4;
    Padding: 8,4,8,5;
    Opacity: 1;
    RenderTransform: none;
    HorizontalContentAlignment: Center;
    HorizontalAlignment: Center;
    VerticalContentAlignment: Center;
    VerticalAlignment: Center;
    ClipToBounds:False;
    FontSize:12;
    Transitions:[
        var(stRenderTransform);
        var(stBorderBrush);
        var(stBackground);
        var(stOpacity);
    ]

    [[
        ButtonSpinner:pointerover{
            Foreground: var(fore-hover);
        }
        ButtonSpinner:disabled{
            Opacity:0.4;
        }
        ButtonSpinner /template/ StackPanel#PART_SpinnerPanel{
            Margin:1;
            Spacing:1;
        }
        ButtonSpinner /template/ RepeatButton#PART_IncreaseButton, ButtonSpinner /template/ RepeatButton#PART_DecreaseButton{
            Height:12;
            Width:24;
        }
        ButtonSpinner:right /template/ RepeatButton#PART_IncreaseButton{
            CornerRadius:0,4,0,0;
        }
        ButtonSpinner:right /template/ RepeatButton#PART_DecreaseButton{
            CornerRadius:0,0,4,0;
        }
        ButtonSpinner:left /template/ RepeatButton#PART_IncreaseButton{
            CornerRadius:4,0,0,0;
        }
        ButtonSpinner:left /template/ RepeatButton#PART_DecreaseButton{
            CornerRadius:0,0,0,4;
        }
        ButtonSpinner /template/ PathIcon#PART_IncreaseButtonIcon{
            Data:M0,9 L10,0 20,9 19,10 10,2 1,10 z;
            Width:9;
            Height:9;
        }
        ButtonSpinner /template/ PathIcon#PART_DecreaseButtonIcon{
            Data:M0,1 L10,10 20,1 19,0 10,8 1,0 z;
            Width:9;
            Height:9;
        }
    ]]
}