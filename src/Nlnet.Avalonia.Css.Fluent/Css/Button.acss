
Button {
    Foreground: var(fore);
    Background: var(control-back);
    BorderBrush:var(control-border);
    BorderThickness: 1;
    CornerRadius: 6;
    Padding: 8,4,8,5;
    Opacity: 1;
    RenderTransform: none;
    HorizontalContentAlignment: Center;
    HorizontalAlignment: Left;
    VerticalContentAlignment: Center;
    VerticalAlignment: Center;
    ClipToBounds:False;
    Transitions:[
        /* TransformOperationsTransition(RenderTransform 0.075 0 LinearEasing); */
        var(stRenderTransform);
        var(stBorderBrush);
        var(stBackground);
        var(stOpacity);
    ]

    [[
        /* 可用时显示阴影 */
        Button:not(:disabled) /template/ ContentPresenter#PART_ContentPresenter{
            BoxShadow:0 1 0 0 #6666;
        }
        Button:pointerover{
            Foreground: var(fore-hover);
            Background: var(control-back-hover);
        }
        Button:pressed{
            RenderTransform:scale(0.97,0.97);
            Opacity:0.9;
            /* ClipToBounds:True; */
        }
        Button:disabled{
            Opacity:0.4;
        }
        /* 主题分类 */
        Button.primary, Button.Primary {
            Background: var(Accent);
            Foreground: #fff;
            [[
                Button:pointerover{
                    Foreground: #fff;
                }
            ]]
        }
    ]]
}