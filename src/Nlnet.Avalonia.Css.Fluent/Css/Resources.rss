:root[mode=light] {
	--blog-body-bg-color: #f4f4f4;
	--blog-bg-color: #fff;
	--text-color: #596172;
	--disabled-text-color: #8b8b8b;
	--border-color: #eef2f8;
	--catalog-bg-color: #fff;
	--panel-bg-color: #f8f8f8;
	--code-bg-color: #f1f1f1;
	--code-ln-bg-color: #eeeeee;
	--code-emphasize-color: rgb(255, 150, 80);
	--shadow-color: rgb(0, 0, 0, .3);
	--scroll-bar-bg-color: #f1f1f1;
	--scroll-bar-thumb-color: #cccccc;
	--scroll-bar-thumb-hover-color: #777777;
	--blockquote-color: #f8f8f8;
	--blockquote-hover-color: #ffffff;
	--comment-body-bg-color: #eeeeee;
	--block-bg-color: white;
}

:root[theme=f] {
	--theme-color: #ff9700;
	--theme-color-light: #fcb54c;
}

:root[theme=g] {
    --theme-color: #ff9700;
    --theme-color-light: #fcb54c;
}


:root:res {
    color(AccentColor, #0068B5);
    brush(Accent, var(AccentColor));
    double(DisabledOpacity, 0.8);
}