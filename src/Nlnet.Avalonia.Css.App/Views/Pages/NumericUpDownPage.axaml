<UserControl x:Class="Nlnet.Avalonia.Css.App.Views.Pages.NumericUpDownPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel VerticalAlignment="Top"
                Orientation="Vertical"
                Spacing="8">

        <TextBlock x:Name="PageDescription"
                   Text="Use NumberBox to allow users to enter algebraic equations and numeric input in your app."
                   TextWrapping="Wrap" />

        <NumericUpDown />
        <NumericUpDown Watermark="请输入..." />

        <NumericUpDown IsEnabled="False" />
        <NumericUpDown IsEnabled="False" Watermark="请输入..." />
    </StackPanel>
</UserControl>