<UserControl x:Class="Nlnet.Avalonia.Css.App.Views.Pages.CheckBoxPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Margin="8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Spacing="8">
        <CheckBox Content="三态勾选框" IsThreeState="True" />
        <CheckBox Content="普通勾选框" />
        <CheckBox Content="已选不可用"
                  IsChecked="True"
                  IsEnabled="False" />
        <CheckBox Content="不可用" IsEnabled="False" />

        <RadioButton Content="选项一" GroupName="A" />
        <RadioButton Content="选项二" GroupName="A" />
        <RadioButton Content="选项三"
                     GroupName="A"
                     IsEnabled="False" />
        <RadioButton Content="选项 A"
                     IsChecked="True"
                     IsEnabled="False" />

    </StackPanel>
</UserControl>