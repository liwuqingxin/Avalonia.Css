                      TargetType="DataGridCell">
            <Design.DataContext>
                <global:Country />
            </Design.DataContext>
            <Setter Property="DataGridCell.Background" Value="{Binding Path=GDP, Mode=OneWay, Converter={StaticResource GDPConverter}}" />
        </ControlTheme>

