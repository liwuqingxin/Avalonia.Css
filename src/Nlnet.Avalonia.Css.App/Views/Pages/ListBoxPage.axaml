<UserControl x:Class="Nlnet.Avalonia.Css.App.Views.Pages.ListBoxPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:app="clr-namespace:Nlnet.Avalonia.Css.App"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:nlnet="https://www.nlnet.com/avalonia"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <TextBlock x:Name="PageDescription"
                   Text="ListBox is a control used to display a list of items from which the user can choose. The control has a number of advanced features like multiple selection, keyboard support, as well as rich customization capabilities."
                   TextWrapping="Wrap" />

        <app:IndependentCase Header="Normal MessageBox.">
            <StackPanel Height="300"
                        Orientation="Horizontal"
                        Spacing="12">
                <ListBox ItemsSource="{nlnet:Enum VerticalAlignment}" />
                <ListBox ItemsSource="{nlnet:Enum Key}" />
            </StackPanel>
        </app:IndependentCase>

    </StackPanel>
</UserControl>