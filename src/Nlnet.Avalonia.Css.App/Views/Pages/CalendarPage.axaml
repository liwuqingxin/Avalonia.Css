<UserControl x:Class="Nlnet.Avalonia.Css.App.Views.Pages.CalendarPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:Nlnet.Avalonia.Css.App.Views.Pages"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:sampleAssistant="https://www.nlnet.com/avalonia"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <Design.DataContext>
        <pages:CalendarPageViewModel />
    </Design.DataContext>

    <StackPanel>
        <TextBlock x:Name="PageDescription"
                   Text="CalendarView shows a larger view for showing and selecting dates.DatePicker by contrast has a compact view with inline selection."
                   TextWrapping="Wrap" />

        <sampleAssistant:Case Header="DatePicker with SelectedData binding to ViewModel.">
			<DatePicker SelectedDate="{Binding Path=DateTime}" />
        </sampleAssistant:Case>

        <sampleAssistant:Case Header="TimePicker with SelectedData binding to ViewModel.">
            <TimePicker SelectedTime="{Binding Path=Time}" />
        </sampleAssistant:Case>

        <sampleAssistant:Case Header="TimePicker with ClockIdentifier='24HourClock'.">
            <TimePicker ClockIdentifier="24HourClock" SelectedTime="{Binding Path=Time}" />
		</sampleAssistant:Case>

        <sampleAssistant:Case Header="TimePicker with ClockIdentifier='12HourClock'.">
            <TimePicker ClockIdentifier="12HourClock" SelectedTime="14:22" />
        </sampleAssistant:Case>

        <sampleAssistant:Case Header="CalendarDatePicker.">
			<CalendarDatePicker />
        </sampleAssistant:Case>

        <sampleAssistant:Case Header="Calendar.">
			<Calendar />
        </sampleAssistant:Case>

        <sampleAssistant:Case Header="Calendar with BlackoutDates.">
			<Calendar>
                <Calendar.BlackoutDates>
                    <CalendarDateRange>
                        <x:Arguments>
                            <system:DateTime>2023-02-4</system:DateTime>
                            <system:DateTime>2023-06-12</system:DateTime>
                        </x:Arguments>
                    </CalendarDateRange>
                </Calendar.BlackoutDates>
            </Calendar>
		</sampleAssistant:Case>

    </StackPanel>

</UserControl>