<nlnet:NtWindow x:Class="Nlnet.Avalonia.Css.Samples.Views.MainWindow"
                xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:nlnet="https://www.nlnet.com/avalonia"
                xmlns:views="clr-namespace:Nlnet.Avalonia.Css.Samples.Views"
                Title="Nlnet.Avalonia.Css.Samples"
                Width="600"
                Height="450"
                Icon="/Assets/avalonia-logo.ico"
                TitleHeight="100"
                WindowStartupLocation="CenterScreen"
                mc:Ignorable="d">
    <nlnet:NtWindow.TitleContent>
        <StackPanel Margin="12"
                    Orientation="Horizontal"
                    Spacing="24">
            <Image Width="80"
                   Height="80"
                   VerticalAlignment="Center"
                   RenderOptions.BitmapInterpolationMode="HighQuality"
                   Source="/Assets/avalonia-logo.ico"
                   Stretch="Uniform" />
            <TextBlock VerticalAlignment="Center" Text="Fluent Theme Powered by Acss" />
        </StackPanel>
    </nlnet:NtWindow.TitleContent>
    <views:MainView />
</nlnet:NtWindow>
